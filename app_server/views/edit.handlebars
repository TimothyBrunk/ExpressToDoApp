<h1>Edit Expense</h1>
{{#each data}}
<h3>Date: {{date}}</h3>
<h3>Category: {{category}}</h3>
<h3>Expense: ${{expenses}}</h3>
<h3>Notes: {{notes}}</h3>

<h4><form method="POST" action ="/update">
  <input type="hidden" value="{{this.id}}" name="upid">
  Date: <input type ="date" name="date" placeholder="Enter Date" value="{{this.date}}"required>
  <br>
  <br>
  Category: <select name="category" required  placeholder="Category" value="{{this.category}}">
    <option size="800" selected="selected" value="" disabled>{{this.category}}</option>
    <option value="Groceries">Groceries</option>
    <option value="Utilities">Utilities</option>
    <option value="Household">Household</option>
    <option value="Entertainment">Entertainment</option>
    <option value="Rent">Rent</option></select>
    <br>
    <br>
  Expense Amount: <input type ="number" min="0.01" max="30000" step="0.01" name="expenses" size="80" value="{{this.expenses}}" placeholder="$00.00" required="">
  <br>
  <br>
  Notes:
  <br>
  <textarea rows="5" cols="30" name="notes" placeholder="Enter Notes">
  </textarea>
  <br>
  <br>
  <input type ="submit" name="submit" value="Submit">
</form></h4>
{{/each}}
